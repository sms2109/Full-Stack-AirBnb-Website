<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form method="POST" action="/login" novalidate class="needs-validation">
      <div class="mt-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>
      <div class="mt-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mt-3">Login</button>
      <br><br><br><br><br><br><br><br><br>
    </form>
  </div>
 
</div>
